generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "sqlite"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id         String   @id @default(uuid())
  username   String   @unique
  name       String
  bio        String?
  email      String?  @unique
  avatar_url String?
  created_at DateTime @default(now())

  @@map("users")
}
